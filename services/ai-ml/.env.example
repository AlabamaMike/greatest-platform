# AI/ML Service Configuration

# Service
ENVIRONMENT=development
PORT=8000
LOG_LEVEL=info

# Redis
REDIS_URL=redis://:nexus_dev_password@localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9092

# MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=nexus
MINIO_SECRET_KEY=nexus_dev_password
MINIO_BUCKET=nexus-ai-models
MINIO_SECURE=false

# Model Configuration
MODEL_CACHE_DIR=/models
DEVICE=cpu
ENABLE_GPU=false

# Performance
BATCH_SIZE=32
MAX_WORKERS=4
INFERENCE_TIMEOUT_SECONDS=30

# Feature Flags
ENABLE_ONNX_OPTIMIZATION=false
ENABLE_MODEL_QUANTIZATION=false

# Cache TTL (seconds)
TRANSLATION_CACHE_TTL=2592000
PREDICTION_CACHE_TTL=3600
RECOMMENDATION_CACHE_TTL=21600
