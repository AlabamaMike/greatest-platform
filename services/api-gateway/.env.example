# Server Configuration
PORT=8000
NODE_ENV=development
API_PREFIX=/api/v1

# Service URLs
AUTH_SERVICE_URL=http://auth:3001
HEALTHCARE_SERVICE_URL=http://healthcare:3003
EDUCATION_SERVICE_URL=http://education:3004
ECONOMIC_SERVICE_URL=http://economic:3005
DATA_ANALYTICS_SERVICE_URL=http://data-analytics:8000
CRISIS_SERVICE_URL=http://crisis:3007
AI_ML_SERVICE_URL=http://ai-ml:8001

# Redis (for rate limiting and caching)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Timeouts (milliseconds)
SERVICE_TIMEOUT=30000
PROXY_TIMEOUT=60000

# Health Check
HEALTH_CHECK_INTERVAL=30000
