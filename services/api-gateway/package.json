    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "redis": "^4.6.11",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
