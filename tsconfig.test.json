{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/tests",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "tests/**/*",
    "tests/e2e/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
